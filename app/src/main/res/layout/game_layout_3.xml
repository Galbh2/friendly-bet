<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/team_a_pic"
        android:src="@mipmap/def"
        android:minHeight="30dp"
        android:minWidth="30dp"

        android:layout_toStartOf="@+id/team_a_text"
        android:layout_alignBottom="@+id/textView4"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TE1"
        android:id="@+id/team_a_text"
        android:textSize="26dp"

        android:layout_toStartOf="@+id/team_a_score"
        android:layout_marginEnd="10dp"
        android:layout_alignBottom="@+id/textView4" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/team_a_score"
        android:text="0"
        android:textSize="24dp"
        android:singleLine="true"
        android:phoneNumber="false"
        android:inputType="numberDecimal"
        android:layout_marginEnd="18dp"
        android:editable="true"
        android:gravity="center_horizontal"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toStartOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:id="@+id/textView4"
        android:textSize="25dp"
        android:layout_centerHorizontal="true" />



    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/team_b_score"
        android:text="0"
        android:textSize="24dp"
        android:singleLine="true"
        android:phoneNumber="false"
        android:inputType="numberDecimal"
        android:layout_marginStart="18dp"
        android:editable="true"
        android:gravity="center_horizontal"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TE2"
        android:id="@+id/team_b_text"
        android:textSize="26dp"

        android:layout_toEndOf="@+id/team_b_score"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/textView4" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/team_b_pic"
        android:src="@mipmap/def"
        android:minHeight="30dp"
        android:minWidth="30dp"

        android:layout_toEndOf="@+id/team_b_text"
        android:layout_alignBottom="@+id/textView4"
        android:layout_marginStart="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:id="@+id/textView5"
        android:layout_marginTop="15dp"
        android:layout_marginStart="7dp"
        android:layout_below="@+id/team_a_score"
        android:layout_alignStart="@+id/team_a_pic"
        android:textIsSelectable="false"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_date"
        android:text="date"
        android:inputType="date"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/team_a_pic" />


</RelativeLayout>